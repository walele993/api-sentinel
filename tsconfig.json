{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist",
    "resolveJsonModule": true
  },
  "include": ["src", "__tests__", "__mocks__"],
  "exclude": ["node_modules", "dist"]
}
